<div>
  <p>コメント件数:<%= @creature.comments.count %></p>
  <% @creature.comments.each do |comment| %>
    <p><%= image_tag comment.user.get_profile_image(100,100) %></p>
    <%= comment.user.name %>
    <%= comment.created_at.strftime('%Y/%m/%d') %><%= comment.comment %>
  <% end %>
</div>
<div>
  <%= form_with model: [@creature,@comment] do |f| %>
    <%= f.text_area :comment, rows: '10', placeholder:"コメント入力" %>
    <%= f.submit "送信する" %>
  <% end %>
</div>