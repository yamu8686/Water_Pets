<div>
  <p>コメント件数:<%= creature.post_comments.count %></p>
  <% creature.post_comments.each do |post_comment| %>
    <p><%= image_tag post_comment.user.get_profile_image(100,100) %></p>
    <%= post_comment.user.name %>
    <%= post_comment.created_at.strftime('%Y/%m/%d') %><%= post_comment.comment %>
    <% if post_comment.user == current_user %>
      <%= link_to "削除する", public_creature_post_comment_path(post_comment.creature, post_comment), method: :delete %>
    <% end %>
  <% end %>
</div>
