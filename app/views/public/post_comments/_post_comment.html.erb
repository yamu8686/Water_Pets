    <tr id="post_comment_user_<%= post_comment.id %>">
      <td>
        <%= link_to public_user_path(post_comment.user) do %>
        <%= image_tag post_comment.user.get_profile_image(100,100) %>
        <%= post_comment.user.name %>
        <% end %>
      </td>
      <td><%= post_comment.created_at.strftime('%Y/%m/%d') %></td>
      <td>
         <% if post_comment.user == current_user %>
            <%= link_to "削除する", public_creature_post_comment_path(post_comment.creature, post_comment), method: :delete, class: "btn btn-danger pull-right", remote: true %>
          <% end %>
      </td>
    </tr>
    <tr id="post_comment_<%= post_comment.id %>">
      <td><%= post_comment.comment %></td>
    </tr>
