<table class="table table-hover table-inverse">
  <thead>
    <tr>
      <th>生体画像</th>
      <th>生体名</th>
      <th>生体説明</th>
      <th colspan="3"></th>
    </tr>
  </thead>
  <tbody>
    <% creatures.each do |creature| %>
      <tr>
        <td>
        <% if creature.image.attached? %>
          <%= link_to creature_path(creature.id) do %>
          <%= image_tag creature.image, size: "100×100" %>
          <% end %>
        <% else %>
          <%= link_to creature_path(creature.id) do %>
          <%= image_tag "no_image", size: "100×100" %>
          <% end %>
        <% end %>
      </td>
      <td><%= link_to creature.name,creature %></td>
      <td><%= creature.description %></td>
      </tr>
    <% end %>
  </tbody>
</table>
