<div class="container px-5 px-sm-0">
  <div class="row">
    <div class="col-md-3">
      <h2>ユーザー情報</h2>
      <%=render 'public/users/info', user: @creature.user %>
      <h2>生体飼育</h2>
      <%= render 'public/creatures/form', creature: @creature_new %>
    </div>
    <div class="col-md-8 offset-md-1">
      <h2>生体飼育情報</h2>
      <table class="table">
        <tbody>
          <tr>
            <td>
              <%= link_to public_user_path(@creature.user.id) do %>
                <%= image_tag @creature.image, size: "50×50" if @creature.image.present? %>
                <%= @creature.name %>
              <% end %>
            </td>
            <td>
              <%= link_to public_creature_path(@creature.id) do %>
                <%= @creature.description %>
              <% end %>
            </td>
            
            <td><%= link_to "#{@creature.post_comments.count} コメント", public_creature_path(@creature.id) %></td>

            <% if @creature.user == current_user %>
              <td><%= link_to "編集する", edit_public_creature_path(@creature), class: "btn btn-sm btn-success" %></td>
              <td><%= link_to "削除する", public_creature_path(@creature), method: :delete, data: { confirm: "本当に削除しますか？" }, class: "btn btn-sm btn-danger" %></td>
            <% end %>
          </tr>
        </tbody>
      </table>
      <div class="post_comments-index">
        <%= render "public/post_comments/index", creature: @creature %>
      </div>
      <%= render "public/post_comments/form", creature: @creature, post_comment: @comment %>
    </div>
  </div>
</div>
