<h1>編集画面</h1>
<%= form_with model: @creature, url: public_creature_path(@creature.id), local:true do |f| %>
  <h4>画像</h4>
    <%= f.file_field :image, accept: "image/*" %>
  <h4>生体名</h4>
    <%= f.text_field :name %>
  <h4>生体説明</h4>
  <%= f.text_area :description %>

  <%= f.submit "保存する", class: "btn btn-success" %>
<% end %>
