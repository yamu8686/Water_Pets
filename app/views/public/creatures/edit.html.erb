<div class='cotainer'>
  <div class='row'>
    <div class='col-sm-12 col-md-8 col-lg-5 px-5 px-sm-0 mx-auto'>
      <h1>編集画面</h1>

      <% if @creature.errors.any? %>
        <%= @creature.errors.count %>件のエラーが発生しました
        <ul>
          <% @creature.errors.full_messages.each do |message| %>
            <li><%= message %></li>
          <% end %>
        </ul>
      <% end %>

      <%= form_with model: @creature, url: public_creature_path(@creature.id),method: :patch do |f| %>
        <h4>画像</h4>
          <%= f.file_field :image, accept: "image/*" %>
        <h4>生体名</h4>
          <%= f.text_field :name %>
        <h4>生体説明</h4>
          <%= f.text_area :description %>

           <div>
            <%= f.radio_button :is_published_flag, 'false' %>
            <%= f.label :is_published_flag, "公開", value:false %>
            <%= f.radio_button :is_published_flag, 'true' %>
            <%= f.label :is_published_flag, "非公開", value: true %>
          </div>
          <%= f.submit "保存する", class: "btn btn-success " %>
      <% end %>
    </div>
  </div>
</div>
