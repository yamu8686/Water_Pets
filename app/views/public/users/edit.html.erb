<div class='container'>
  <div class='row'>
    <div class='col-sm-12 col-md-8 col-lg-5 px-5 px-sm-0 mx-auto'>
      <h2>ユーザー情報</h2>
      <%= form_with model: @user,url: public_user_path(@user.id), local:true do |f| %>
        <h4>ニックネーム</h4>
          <%= f.text_field :name %>
        <h4>プロフィール画像</h4>
          <%= f.file_field :image, accept: "image/*" %>
          <%= f.submit "保存する", class: "btn btn-success" %>
      <% end %>
    </div>
  </div>
</div>
