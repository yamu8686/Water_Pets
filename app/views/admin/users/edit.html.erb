<div class="container">
  <div class="row mt-5">
    <div class="col-sm-4 offset-4">
      <%= form_with model: @user, url: admin_user_path(@user), method: :patch do |f| %>
      <div class="form-group">
        <%= f.label :ニックネーム, class: "brown-border px-3" %>
        <%= f.text_field :name, class: "form-control col-4" %>
      </div>

      <div class="form-group">
        <%= f.label :メールアドレス, class: "brown-border px-3" %>
        <%= f.text_field :email, class: "form-cotrol offset-1 col-8" %>
      </div>

      <div class="form-group">
        <%= f.label :会員ステータス, class: "brown-border px-3" %>
        <div class="col-12 ml-2">
          <%= f.radio_button :is_deleted, false %>
          <%= f.label :is_deleted, "有効" %>
          <%= f.radio_button :is_deleted, true %>
          <%= f.label :is_deleted, "退会" %>
        </div>
      </div>

      <div class="row">
        <%= f.submit "編集内容を保存する", class: "btn btn-outline-danger offset-3 mt-3" %>
      </div>
    </div>
    <% end %>
  </div>
</div>